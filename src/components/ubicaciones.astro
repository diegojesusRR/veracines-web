---
import UbicacionCard from "./UbicacionCard.astro";
import {CINES} from "../consts/cines";

const regio = CINES.find(cine => cine.url === 'regio');
const garrucha = CINES.find(cine => cine.url === 'garrucha');
const vera = CINES.find(cine => cine.url === 'vera');
---

<section>
    <h3 class="text-xl text-primary text-center font-bold">Puedes encontrarnos en:</h3>
    {
        <UbicacionCard cine={regio}/>
        <UbicacionCard cine={vera}/>
        <UbicacionCard cine={garrucha}/>
    }
</section>
