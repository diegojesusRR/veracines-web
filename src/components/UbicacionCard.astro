---
import Action from "./Action.astro";
const { cine } = Astro.props;
---
<div class=`flex flex-col sm:flex-row p-4 m-2 rounded-2xl bg-gradient-to-br from-white via-gray-100 to-gray-200 border-2 border-${cine.color} shadow-xl transition-transform md:hover:scale-105`>
    <div class="flex flex-col justify-center items-center p-6 sm:w-2/3">
        <h4 class={`text-2xl text-${cine.color} text-center font-extrabold underline mb-3 drop-shadow-md`}>
            {cine.nombre}
        </h4>
        { cine.url == 'regio' && <span class="block text-xs text-yellow-800 bg-yellow-200 rounded px-2 py-1 mb-2 font-semibold shadow-md border border-yellow-400 animate-pulse">
       ¡Ahora también en Verano!
    </span>}
        <p class={`text-center text-${cine.color} mb-4 text-base font-medium`}>
            {cine.localizacion.descripcion}
        </p>
        <Action
                class=`w-full md:w-3/4 text-base md:text-xs bg-${cine.color} text-white font-bold py-2 px-4 rounded-lg shadow hover:bg-opacity-90 transition`
                color="white"
                as="a"
                aria-disabled="false"
                href={`/cartelera-${cine.url}/`}
                aria-label={`Enlace a la cartelera de ${cine.nombre}`}
        >
            🎬 Consultar cartelera
        </Action>
    </div>
    <div class="flex flex-col items-center justify-center">
        <div class=`border-4 border-${cine.color} rounded-xl overflow-hidden shadow-lg m-auto`>
            <iframe
                    class="align-middle w-full rounded-lg"
                    src={`https://www.google.com/maps/embed?pb=${cine.localizacion.ubicacionKey}`}
                    width="400"
                    height="250"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
        </div>
        <p class={`text-center underline text-${cine.color} text-xs font-bold w-auto p-2 mt-2 bg-white bg-opacity-60 rounded`}>
            📍 {cine.localizacion.direccion}
        </p>
    </div>
</div>